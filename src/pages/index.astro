---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <h1 class="text-2xl">Test Astro et Plot (Observablehq)</h1>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />
  <div>
    <nav>
      <ul class="flex space-x-4">
        <li class="border-2 border-red-700 rounded-lg"><a href="/species">Species</a></li>
        <li class="border-2 border-red-700 rounded-lg"><a href="/iframe/test-iframe">Iframe</a></li>
      </ul>
    </nav>
  </div>
</Layout>
